<%- include('../partials/header-auth') %>

<div class="create-container">
    <div class="create-form">
        <h1>Create Post</h1>
        <%- include('../partials/form-errors') %>

        <form action="/pin/pin-post-creation" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="form-group">
                <label for="pinImage">Image</label>
                <input
                        type="file"
                        id="pinImage"
                        name="pinImage"
                        accept="image/png, image/jpeg, image/gif"
                        required
                >
                <div class="form-hint">Max size: 2MB. Formats: JPG, PNG, GIF</div>
            </div>

            <div class="form-group">
                <label for="title">Title</label>
                <input
                        type="text"
                        id="title"
                        name= "title"
                        value="<%= typeof createPinData !== 'undefined' ? createPinData.title || '' : '' %>"
                        placeholder="Add a title"
                        required
                >
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input
                        type="text"
                        id="description"
                        name= "description"
                        value="<%= typeof createPinData !== 'undefined' ? createPinData.description || '' : '' %>"
                        placeholder="Add a description"
                >
            </div>

            

            <div class="form-group">
                <label for="link">Link</label>
                <input
                        type="text"
                        id="link"
                        name= "link"
                        value="<%= typeof createPinData !== 'undefined' ? createPinData.description || '' : '' %>"
                        placeholder="Add a link"
                >
            </div>

            <!--Create board list and or add board to existing board-->
