                        placeholder="Add to board"
                >
            </div>
            -->
            <div class="form-group">
                <label for="tags">Tags</label>
                <input
                        type="text"
                        id="tags"
                        name= "tags"
                        value="<%= typeof createPinData !== 'undefined' ? createPinData.tags || '' : '' %>"
                        placeholder="Add topics seperated by a space"
                >
            </div>
